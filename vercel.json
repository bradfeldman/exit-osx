{
  "framework": "nextjs",
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/check-trial-expiration",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/detect-document-decay",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/detect-financial-staleness",
      "schedule": "0 7 * * 1"
    },
    {
      "path": "/api/cron/monthly-drift-report",
      "schedule": "0 9 1 * *"
    }
  ]
}

{
  "framework": "nextjs",
  "regions": ["iad1"],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-store" }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/check-trial-expiration",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/detect-document-decay",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/detect-financial-staleness",
      "schedule": "0 7 * * 1"
    },
    {
      "path": "/api/cron/monthly-drift-report",
      "schedule": "0 9 1 * *"
    },
    {
      "path": "/api/cron/weekly-digest",
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/cron/task-reminder",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/generate-drift-reports",
      "schedule": "0 6 1 * *"
    },
    {
      "path": "/api/cron/detect-inactivity",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/sync-quickbooks",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/refresh-multiples",
      "schedule": "0 10 1 * *"
    },
    {
      "path": "/api/cron/trial-drip",
      "schedule": "0 9 * * *"
    }
  ]
}
